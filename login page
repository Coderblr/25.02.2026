        justifyContent: "flex-end",
        overflow: "hidden",
    },

    rightBg: {
        position: "absolute",
        top: 0,
        left: 0,
        width: "100%",
        height: "100%",
        objectFit: "cover",
        zIndex: 0,
    },

    /* FORM CARD */
    formCard: {
        position: "relative",
        zIndex: 2,
        backgroundColor: "white",
        borderRadius: "16px",
        padding: "36px 40px",
