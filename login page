'use client';

import { useState } from "react";
import { mockFetch, createMockFetch } from "../../utils/mockData";

export default function LoginPage({ onLoginSuccess, onNavigate }) {
    const [username, setUsername] = useState("");
    const [password, setPassword] = useState("");
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState("");

    const [userFocused, setUserFocused] = useState(false);
    const [passFocused, setPassFocused] = useState(false);

    const handleLogin = async (e) => {
        e.preventDefault();
        setLoading(true);
        setError("");

        try {
            const response = await createMockFetch(() => mockFetch.login(username));

            if (!response.ok) {
                const data = await response.json();
                throw new Error(data.detail || "Login failed");
            }

            const data = await response.json();
            const authToken = data.access_token;
            const userType = data.user_type ?? 0;

            localStorage.setItem("userToken", authToken);
            localStorage.setItem("userType", String(userType));
            onLoginSuccess(authToken, userType);

            setUsername("");
            setPassword("");
        } catch (err) {
            setError(err.message);
        } finally {
            setLoading(false);
        }
    };

    return (
        <div style={styles.container}>

            {/* ===== LEFT PANEL ===== */}
            <div style={styles.leftPanel}>
                <div style={styles.leftContent}>
                    {/* Welcome Back heading */}
                    <img
                        src="/signin/Welcome Back.svg"
                        alt="Welcome Back"
                        style={styles.welcomeImg}
                    />

                    {/* Subtitle */}
                    <img
                        src="/signin/Sign in to access your test data creation platform.svg"
                        alt="Sign in to access your test data creation platform"
                        style={styles.subtitleImg}
                    />

                    {/* Feature links */}
                    <div style={styles.featureLinks}>
                        <span style={styles.featureLink}>Automated CIF Generation</span>
                        <span style={styles.featureLink}>CCOD Account Creation</span>
                        <span style={styles.featureLink}>Deposit Management</span>
                    </div>

                    {/* Back to Home */}
                    <button style={styles.backBtn} onClick={() => onNavigate("welcome")}>
                        Back to Home
                    </button>
                </div>
            </div>

            {/* ===== RIGHT PANEL ===== */}
            <div style={styles.rightPanel}>

                {/* Background image (business man) */}
                <img
                    src="/signin/Mask Group 220.png"
                    alt=""
                    style={styles.rightBg}
                />

                {/* Floating login card */}
                <div style={styles.formCard}>

                    {/* SBI Logo */}
                    <div style={styles.logoRow}>
                        <img
                            src="/signin/SBI logo Blue.svg"
                            alt="SBI"
                            style={styles.sbiLogo}
                        />
                    </div>

                    {/* Sign In heading */}
                    <img
                        src="/signin/Sign In.svg"
                        alt="Sign In"
                        style={styles.signInImg}
                    />

                    {/* "Enter your credentials..." */}
                    <img
                        src="/signin/Enter your credentials to continue.svg"
                        alt="Enter your credentials to continue"
                        style={styles.credentialsImg}
                    />

                    {/* Username field */}
                    <div style={styles.fieldGroup}>
                        <img
                            src="/signin/Username.svg"
                            alt="Username"
                            style={styles.fieldLabelImg}
                        />
                        <input
                            type="text"
                            value={username}
                            onChange={(e) => setUsername(e.target.value)}
                            onFocus={() => setUserFocused(true)}
                            onBlur={() => setUserFocused(false)}
                            style={{
                                ...styles.input,
                                borderColor: userFocused ? "#003478" : "#b8cfe8",
                                boxShadow: userFocused
                                    ? "0 0 0 3px rgba(0,52,120,0.12)"
                                    : "none",
                            }}
                            placeholder=""
                            required
                        />
                    </div>

                    {/* Password field */}
                    <div style={styles.fieldGroup}>
                        <img
                            src="/signin/Password.svg"
                            alt="Password"
                            style={styles.fieldLabelImg}
                        />
                        <input
                            type="password"
                            value={password}
                            onChange={(e) => setPassword(e.target.value)}
                            onFocus={() => setPassFocused(true)}
                            onBlur={() => setPassFocused(false)}
                            style={{
                                ...styles.input,
                                borderColor: passFocused ? "#003478" : "#b8cfe8",
                                boxShadow: passFocused
                                    ? "0 0 0 3px rgba(0,52,120,0.12)"
                                    : "none",
                            }}
                            placeholder=""
                            required
                        />
                    </div>

                    {/* Error */}
                    {error && <div style={styles.errorMsg}>{error}</div>}

                    {/* Login button */}
                    <button
                        onClick={handleLogin}
                        style={{
                            ...styles.loginBtn,
                            opacity: loading ? 0.8 : 1,
                        }}
                        disabled={loading}
                    >
                        {loading ? "Signing in..." : "Login"}
                    </button>

                    {/* Register link */}
                    <div style={styles.registerRow}>
                        <img
                            src="/signin/Don't have an account Click Here to Create Account.svg"
                            alt="Don't have an account? Click Here to Create Account"
                            style={styles.registerImg}
                            onClick={() => onNavigate("register")}
                        />
                    </div>
                </div>
            </div>
        </div>
    );
}

/* ===================================
   STYLES
=================================== */
