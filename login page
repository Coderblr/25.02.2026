    container: {
        display: "flex",
        minHeight: "100vh",
        width: "100vw",
        fontFamily: "'Inter', 'Segoe UI', sans-serif",
        overflow: "hidden",
    },

    /* LEFT */
    leftPanel: {
        width: "310px",
        flexShrink: 0,
        backgroundColor: "#f0f5fb",
